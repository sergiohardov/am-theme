<section class="{{class}}" {{anchor}}>
	{% if fields.title %}
		<h2 class="slider-unsplash__title">
			{{fields.title}}
		</h2>
	{% endif %}

	{% if fields.description %}
		<div class="slider-unsplash__description">
			{{fields.description}}
		</div>
	{% endif %}

	{% if slides %}
		<div class="slider-unsplash__swiper slider-unsplash__swiper--{{fields.orientation}} swiper">
			<div class="swiper-wrapper">
				{% for slide in slides %}
					<div class="slider-unsplash__swiper-slide swiper-slide">
						<img src="{{slide.src}}" alt="{{slide.alt}}">
					</div>
				{% endfor %}
			</div>

			<div class="slider-unsplash__swiper-pagination swiper-pagination"></div>
		</div>
	{% endif %}
</section>
